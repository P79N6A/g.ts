{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "es2016.array.include"
    ],
    "baseUrl": ".",
    "paths": {
      "@gradii/g": [
        "packages/g/public-api"
      ],
      "@gradii/g/*": [
        "packages/*/index"
      ],
      "@gradii/*": [
        "libs/*/public-api"
      ],
      "@gradii/vector-math": [
        "libs/vector-math/public-api"
      ]
    }
  },
  "exclude": [
    "applications",
    "packages",
    "test",
    "node_modules",
    "tmp",
    "tools",
    "dist"
  ]
}
